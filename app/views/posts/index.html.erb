<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>index</title>
</head>
<body>
	<main>
		<h1 class = books>Books</h1>
		<table>
			<thead>
				<tr>
					<th>Title</th><th>Body</th><th></th><th></th><th></th>
				</tr>
			</thead>
			<tbody>
					<% @posts.each do |post| %>
				 	<tr>
						<td><%= post.title %></td>
						<td><%= post.body %></td>
						<td class = "show"><%= link_to 'Show', post_path(post),class:"show_1" %></td>
						<td class = "edit"><%= link_to 'Edit', edit_post_path(post),class:"edit_1" %></td>
						<td class = "destroy"><%= link_to 'Destroy', post_path(post),class:"destroy_1" ,method: :delete %></td>
					 </tr>
					<% end %>
			</tbody>
		</table>

		<h2 class = "new-book">New book</h2>

		<%= form_for(@post) do |f| %>

		  <div class = "title">
			<h4>Title</h4>

			<%= f.text_field :title,class:"book_title" %>
		  </div>

		  <div class = "body">
			<h4>Body</h4>

			<%= f.text_area :body,class:"book_body" %>
		  </div>

			<p class = "submit"><%= f.submit 'Create Book'%></p>

		<% end %>
	</main>
</body>
</html>
